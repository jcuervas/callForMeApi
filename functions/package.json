{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .ts ./src --fix",
    "build": "sh ./scripts/build.sh",
    "typesync": "typesync",
    "serve": "firebase use dev && npm run build && firebase serve --host 0.0.0.0 --only hosting,functions",
    "serve-prod": "firebase use prod && npm run build && firebase serve --host 0.0.0.0 --only hosting,functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "logs": "firebase functions:log",
    "config-dev": "firebase use dev",
    "config-prod": "firebase use prod",
    "deploy-prod": "sh ./scripts/deploy.sh prod",
    "deploy-dev": "sh ./scripts/deploy.sh dev",
    "deploy": "npm run deploy-dev && npm run deploy-prod",
    "migrate-dev": "sh ./scripts/migrate.sh dev",
    "migrate-prod": "sh ./scripts/migrate.sh prod",
    "migrate-local": "sh ./scripts/migrate.sh local"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^0.21.1",
    "@nestjs/common": "^7.6.18",
    "@nestjs/core": "^7.6.18",
    "@nestjs/platform-express": "^7.6.18",
    "@nestjs/typeorm": "^8.0.2",
    "cors": "^2.8.5",
    "date-fns": "^2.25.0",
    "date-fns-timezone": "^0.1.4",
    "dotenv": "^10.0.0",
    "email-templates": "^8.0.8",
    "firebase": "^8.10.0",
    "firebase-admin": "^9.12.0",
    "firebase-functions": "^3.15.7",
    "i18n": "^0.13.3",
    "mysql": "^2.18.1",
    "nodemailer": "^6.6.5",
    "nunjucks": "^3.2.3",
    "plivo": "^4.22.4",
    "stripe": "^8.179.0",
    "typeorm": "^0.2.38",
    "express": "^4.17.1",
    "rxjs": "^7.4.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/email-templates": "^8.0.4",
    "@types/eslint": "^7.28.1",
    "@types/express": "^4.17.13",
    "@types/i18n": "^0.13.1",
    "@types/mysql": "^2.15.19",
    "@types/nodemailer": "^6.4.4",
    "@types/nunjucks": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@typescript-eslint/types": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "firebase-functions-test": "^0.3.3",
    "typescript": "^4.4.3"
  },
  "private": true
}
