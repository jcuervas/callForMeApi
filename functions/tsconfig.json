{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@src": ["src/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
